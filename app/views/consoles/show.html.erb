<div class="container">
  <div class="gap d-flex justify-content-center mt-5">
    <div class="card-trip" >
      <% if @console.photo.attached? %>
        <div class="card-trip-infos" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(@console.photo.key, height: 300, crop: :fill)%>')">
      <% else %>
        <div class="card-trip-infos" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('')">
      <% end %>
        <div>
          <h2><%= @console.name %></h2>
          <h3><%= @console.brand %></h3>
        </div>
        <h2 class="card-trip-pricing"><%= @console.price %> € </h2>
      </div>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. <br>
          Fugiat similique, consectetur aliquam beatae dolorum esse</p>
    </div>
